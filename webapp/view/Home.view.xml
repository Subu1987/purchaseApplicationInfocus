<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form" xmlns:viz="sap.viz.ui5.controls" xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
	xmlns:viz.data="sap.viz.ui5.data" xmlns:chart="sap.suite.ui.commons" controllerName="com.infocus.salesApplication.controller.Home">
	<Page id="page" title="Sales Dashboard" enableScrolling="true" showNavButton="false" navButtonPress="onNavBack" showFooter="false">
		<content>
			<FlexBox id="panelFormBox" direction="Row" width="100%" height="auto" justifyContent="Center" alignItems="Center" class="sapUiTinyMarginTop">
				<items>
					<!-- Radio Button Section -->
					<FlexBox width="100%" id="RadioBtn" wrap="NoWrap" justifyContent="Center" alignItems="Center">
						<RadioButtonGroup id="radioBtnlist" columns="6" select="onRadioButtonSelectList">
							<RadioButton id="fiscalYearWise" text="Fiscal Year Wise"/>
							<RadioButton id="quaterlyWise" text="Quaterly Wise"/>
						</RadioButtonGroup>
					</FlexBox>
					<!-- Input Fields Section -->
					<FlexBox width="100%" id="tripView" wrap="NoWrap" justifyContent="Center" alignItems="Center">
						<HBox id="customerInputBox" direction="Column" alignItems="Center" visible="false">
							<Label text="Customer" design="Bold"/>
							<Input id="_customerInputId" type="Text" placeholder="eg.2023,2024,2025" required="true" liveChange="onLiveChange"/>
						</HBox>
						<!-- Financial Year Input -->
						<HBox id="fiscalYearBox" direction="Column" alignItems="Center" visible="true" class="sapUiTinyMarginBegin">
							<Label text="Fiscal Year" design="Bold"/>
							<Input id="_financialYearInputId" type="Text" placeholder="eg.2023,2024,2025" showValueHelp="true" valueHelpRequest="handleValueFiscalYear"
								required="true" liveChange="onLiveChange"/>
						</HBox>
						<!-- Financial Quarter Input -->
						<HBox id="quarterBox" direction="Column" alignItems="Center" visible="false" class="sapUiTinyMarginBegin">
							<Label text="Fiscal Quarter" design="Bold"/>
							<Input id="_quarterInputId" type="Text" placeholder="Enter Value" showValueHelp="true" valueHelpRequest="handleValueQuarter" required="true"
								liveChange="onLiveChange"/>
						</HBox>
						<!-- Quarter Year Input -->
						<HBox id="quarterYearBox" direction="Column" alignItems="Center" visible="false" class="sapUiTinyMarginBegin">
							<Label text="Quarter Year" design="Bold"/>
							<Input id="_quarterInputYearId" type="Text" placeholder="Enter Value" showValueHelp="true" valueHelpRequest="handleValueQuarterYear"
								required="true" liveChange="onLiveChange"/>
						</HBox>
						<!-- Action Buttons (Search and Clear) -->
						<HBox id="buttonBox" direction="Row" justifyContent="Center" alignItems="Center" class="sapUiSmallMarginTop">
							<Button id="searchData" icon="sap-icon://sales-order" type="Emphasized" press="getListData" class="sapUiTinyMarginBegin"/>
							<Button id="clearData" icon="sap-icon://delete" type="Emphasized" press="clearListData" class="sapUiTinyMarginBegin"/>
						</HBox>
					</FlexBox>
				</items>
			</FlexBox>
			<Panel expandable="false" expanded="false" class="sapUiResponsiveMargin" backgroundDesign="Solid" width="auto" height="100%">
				<content>
					<!-- IconTabBar for switching between scenarios -->
					<IconTabBar id="iconTabBar" selectedKey="scenario1" select="onTabSelect" stretchContentHeight="true" class="equalWidthTabs">
						<items>
							<!-- Scenario 1 -->
							<IconTabFilter key="scenario1" text="All Customer Quarterly Wise" icon="sap-icon://group" tooltip="All Customer Quarterly Wise">
								<content>
									<!--<VBox visible="{globalData>/isTableFragment1Visible}">
										<core:Fragment id="tableFragment1" fragmentName="com.infocus.salesApplication.view.fragments.Tables.TableFragment1" type="XML"/>
									</VBox>-->
									<!--<VBox visible="{globalData>/isTableFragment2Visible}">
										<core:Fragment id="tableFragment2" fragmentName="com.infocus.salesApplication.view.fragments.Tables.TableFragment2" type="XML"/>
									</VBox>-->
									<VBox visible="{globalData>/isChartFragment1Visible}">
										<core:Fragment id="chartFragment1" fragmentName="com.infocus.salesApplication.view.fragments.Charts.ChartFragment1" type="XML"/>
									</VBox>
									<!--<VBox visible="{globalData>/isChartFragment2Visible}">
										<core:Fragment id="chartFragment2" fragmentName="com.infocus.salesApplication.view.fragments.Charts.ChartFragment2" type="XML"/>
									</VBox>-->
								</content>
							</IconTabFilter>
							<!-- Scenario 2 -->
							<IconTabSeparator/>
							<IconTabFilter key="scenario2" text="Top 10 Customer Quarterly Wise" icon="sap-icon://customer" tooltip="Top 10 Customer Quarterly Wise">
								<content>
									<VBox visible="{globalData>/isTableFragment3Visible}">
										<core:Fragment id="tableFragment3" fragmentName="com.infocus.salesApplication.view.fragments.Tables.TableFragment3" type="XML"/>
									</VBox>
									<VBox visible="{globalData>/isTableFragment4Visible}">
										<core:Fragment id="tableFragment4" fragmentName="com.infocus.salesApplication.view.fragments.Tables.TableFragment4" type="XML"/>
									</VBox>
									<!--<VBox visible="{globalData>/isChartFragment3Visible}">
										<core:Fragment id="chartFragment3" fragmentName="com.infocus.salesApplication.view.fragments.Charts.ChartFragment3" type="XML"/>
									</VBox>
									<VBox visible="{globalData>/isChartFragment4Visible}">
										<core:Fragment id="chartFragment4" fragmentName="com.infocus.salesApplication.view.fragments.Charts.ChartFragment4" type="XML"/>
									</VBox>-->
								</content>
							</IconTabFilter>
							<!-- Scenario 3 -->
							<IconTabSeparator/>
							<IconTabFilter key="scenario3" text="Single Customer Quarterly Wise" icon="sap-icon://employee-lookup"
								tooltip="Single Customer Quarterly Wise">
								<content>
									<VBox visible="{globalData>/isTableFragment5Visible}">
										<core:Fragment id="tableFragment5" fragmentName="com.infocus.salesApplication.view.fragments.Tables.TableFragment5" type="XML"/>
									</VBox>
									<VBox visible="{globalData>/isTableFragment6Visible}">
										<core:Fragment id="tableFragment6" fragmentName="com.infocus.salesApplication.view.fragments.Tables.TableFragment6" type="XML"/>
									</VBox>
									<!--<VBox visible="{globalData>/isChartFragment5Visible}">
										<core:Fragment id="chartFragment5" fragmentName="com.infocus.salesApplication.view.ChartFragment5" type="XML"/>
									</VBox>
									<VBox visible="{globalData>/isChartFragment6Visible}">
										<core:Fragment id="chartFragment6" fragmentName="com.infocus.salesApplication.view.ChartFragment6" type="XML"/>
									</VBox>-->
								</content>
							</IconTabFilter>
							<!-- Scenario 4 -->
							<IconTabSeparator/>
							<IconTabFilter key="scenario4" text="Quarterly Wise Turnover" icon="sap-icon://customer-financial-fact-sheet"
								tooltip="Quarterly Wise Turnover">
								<content>
									<VBox visible="{globalData>/isTableFragment7Visible}">
										<core:Fragment id="tableFragment7" fragmentName="com.infocus.salesApplication.view.fragments.Tables.TableFragment7" type="XML"/>
									</VBox>
									<VBox visible="{globalData>/isTableFragment8Visible}">
										<core:Fragment id="tableFragment8" fragmentName="com.infocus.salesApplication.view.fragments.Tables.TableFragment8" type="XML"/>
									</VBox>
									<!--<VBox visible="{globalData>/isChartFragment7Visible}">
										<core:Fragment id="chartFragment7" fragmentName="com.infocus.salesApplication.view.ChartFragment7" type="XML"/>
									</VBox>
									<VBox visible="{globalData>/isChartFragment8Visible}">
										<core:Fragment id="chartFragment8" fragmentName="com.infocus.salesApplication.view.ChartFragment8" type="XML"/>
									</VBox>-->
								</content>
							</IconTabFilter>
						</items>
					</IconTabBar>
				</content>
			</Panel>
		</content>
	</Page>
</mvc:View>